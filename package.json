{
  "name": "hauptstimme-js",
  "version": "3.1.1",
  "description": "A JavaScript library for music theory",
  "author": "mike-stumpf",
  "license": "MIT",
  "engines": {
    "node": ">=4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mike-stumpf/hauptstimme.js"
  },
  "main": "./dist/exports.js",
  "typings": "./dist/exports.d.js",
  "scripts": {
    "start": " tsc --watch",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./dev/src/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll",
    "test": "node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec dev/tests/*.test.js dev/tests/**/*.test.js",
    "build-ts": "tsc && npm run typedoc",
    "postbuild-ts": "browserify ./dist/exports.js --standalone HauptstimmeJS --debug | uglifyjs --source-map --output ./dist/bundle.js > ./dist/bundle.js",
    "watch-ts": "chokidar './dev/**/*.ts' -c 'npm run build-ts'"
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "5.0.0",
    "browserify": "16.2.0",
    "chai": "4.1.2",
    "chokidar-cli": "1.2.0",
    "coveralls": "3.0.0",
    "istanbul": "0.4.5",
    "mocha": "5.0.5",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "shx": "0.2.2",
    "typedoc": "0.11.1",
    "typescript": "2.8.1",
    "uglify-js": "3.3.20"
  },
  "dependencies": {
    "@types/bluebird-global": "3.5.5",
    "@types/node": "8.0.0",
    "bluebird": "3.5.1",
    "lodash": "4.17.5"
  }
}
